{
  // Override default eslint settings for the project
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "GlobalConfig": true,
    "AuthConfig": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jsx-a11y"
  ],
  // Note:
  //  0 = ignore rule (off)
  //  1 = warn
  //  2 = error
  "rules": {
    "no-useless-escape": 2,
    "no-script-url": 0,
    "jsx-a11y/anchor-has-content": 1,
    "jsx-a11y/href-no-hash": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "no-unused-vars": 0,
    "no-template-curly-in-string": 2,
    "no-console": 0,
    "no-undef": 0,
    "no-mixed-spaces-and-tabs": 0,
    "indent": [
      2,
      "tab",
      {
        "SwitchCase": 1,
        "ignoredNodes": ["TemplateLiteral"]
      }
    ],
    "quotes": [
      2,
      "double"
    ],
    "semi": [
      2,
      "always"
    ]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.13.1"
    }
  }
}
